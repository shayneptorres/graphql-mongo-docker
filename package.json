{
  "name": "dibit-api",
  "version": "1.0.0",
  "description": "API implenting GraphQL for Dibit Web/iOS applications",
  "main": "index.js",
  "scripts": {
    "dev": "docker start dibitapi_mongo_1 ; NODE_ENV=development nodemon MONGO=localhost -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "json-server": "json-server --watch db.json",
    "start": "NODE_ENV=production pm2 start dist ; pm2 logs dist",
    "prestart": "npm run -s build",
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "author": "Shayne Torres",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "express-jwt": "^5.3.0",
    "graphql": "^0.11.2",
    "graphql-server-express": "^1.1.2",
    "graphql-tools": "^1.2.2",
    "http": "0.0.0",
    "json-server": "^0.12.0",
    "jsonwebtoken": "^7.4.3",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.9",
    "nodemon": "^1.11.0",
    "pm2": "^2.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.3.0",
    "nodemon": "^1.11.0"
  }
}
